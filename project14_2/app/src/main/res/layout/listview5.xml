<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >
    <ImageView
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:src="#FFD1A4"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:id="@+id/notify_img">


    </ImageView>

    <TextView
        android:id="@+id/notify_title"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@id/notify_img"
        android:layout_alignBottom="@id/notify_img"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="訂單更新"
        android:textColor="#FFFFFF" />


    <TextView
        android:id="@+id/notify_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@id/message_member"
        android:text="訊息"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"></TextView>

</RelativeLayout>