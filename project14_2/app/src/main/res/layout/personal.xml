<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/sv4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="#ffd1a4">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffeedd"
            android:orientation="vertical">

        <!--   <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffeedd"
                android:elevation="4dp"
                android:minHeight="?attr/actionBarSize"
                android:theme="@style/AppTheme.ToolBarStyle"
                app:popupTheme="@style/AppTheme.PopupOverlay">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                </RelativeLayout>
            </android.support.v7.widget.Toolbar>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:background="#ffd1a4"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv4_1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="left"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_user" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ffd1a4"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"

                            android:background="#ffd1a4"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv4_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="使用者名稱"
                                android:textAppearance="?android:attr/textAppearanceSmall"


                                />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="#ffd1a4"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btn4_8"
                                style="?android:attr/buttonStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="15dp"

                                android:background="@drawable/btn_selector"
                                android:backgroundTint="#ffeeaa"
                                android:paddingLeft="7dp"
                                android:paddingRight="7dp"
                                android:text="我的評價"
                                android:textColor="#696969" />


                        </LinearLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn4_7"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="24dp"
                        android:layout_height="24dp"


                        android:layout_marginTop="15dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/button_setting"
                        android:textSize="18dp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="#ffd1a4">

                <TextView
                    android:id="@+id/tv4_6"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_alignTop="@+id/tv4_4"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toEndOf="@+id/tv4_1"
                    android:background="#ffeedd"
                    android:gravity="center"
                    android:text="新手賣家，請多指教\n歡迎逛逛商品，有問題私訊喔!"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#ffeedd"
                android:elevation="4dp"
                android:theme="@style/AppTheme.ToolBarStyle"
                app:popupTheme="@style/AppTheme.PopupOverlay">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/iv4_1"

                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tv4_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="#ffeeaa"
                        android:gravity="center"
                        android:text="請求單"
                        android:textSize="18dp"

                        />

                    <TextView
                        android:id="@+id/tv4_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="#ffeeaa"
                        android:gravity="center"
                        android:text="想要商品"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/tv4_4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="#ffeeaa"
                        android:gravity="center"
                        android:text="文章"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/tv4_5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="#ffeeaa"
                        android:gravity="center"
                        android:text="商品單"
                        android:textSize="18dp" />
                </LinearLayout>
            </android.support.v7.widget.Toolbar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffd1a4"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp">

                <ViewFlipper
                    android:id="@+id/vs4_1"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:background="#ffeedd"



                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recyclerView4_1"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"  >


                        </android.support.v7.widget.RecyclerView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recyclerView4_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"  >


                        </android.support.v7.widget.RecyclerView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recyclerView4_3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"  >


                        </android.support.v7.widget.RecyclerView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recyclerView4_4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"  >


                        </android.support.v7.widget.RecyclerView>

                    </LinearLayout>


                </ViewFlipper>
            </LinearLayout>


        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:layout_gravity="bottom"
        android:background="#ffeedd"
        android:elevation="30dp"
        android:paddingTop="3dp">

        <Button

            android:id="@+id/btn4_1"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="#ffeedd"
            android:drawableTop="@drawable/button_house"
            android:padding="0dp"
            android:text="@string/forum"
            android:textSize="14dp"/>

        <!--<Button-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="@string/buyer"-->
            <!--android:id="@+id/btn4_2"-->
            <!--android:layout_gravity="center" />-->

        <Button

            android:id="@+id/btn4_3"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="#ffeedd"
            android:padding="0dp"
            android:drawableTop="@drawable/button_shoppingbag"
            android:text="@string/seller"
            android:textSize="14dp"/>

        <Button

            android:id="@+id/btn4_4"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="#ffeedd"
            android:padding="0dp"
            android:drawableTop="@drawable/button_map"
            android:text="@string/map"
            android:textSize="14dp"/>

        <Button


            android:id="@+id/btn4_5"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="#ffeedd"
            android:padding="0dp"
            android:drawableTop="@drawable/button_notification"
            android:text="@string/notify"
            android:textSize="14dp"
            />
        <Button

            android:id="@+id/btn4_6"
            style="?android:attr/borderlessButtonStyle"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="#ffeedd"
            android:padding="0dp"
            android:drawableTop="@drawable/button_avatar"
            android:text="@string/personal"
            android:textSize="14dp"/>
    </LinearLayout>



</LinearLayout>
