<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/proimg"
        android:focusable="true"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="#AAAAAA"></ImageView>

    <RelativeLayout
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/protext1"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:text="品牌名稱"
            android:textColor="#696969"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/protext2"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/protext1"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:text=" - "
            android:textColor="#696969"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/protext3"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toRightOf="@id/protext2"
            android:text="商品名稱"
            android:textColor="#696969"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/protext4"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/protext3"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="10dp"
            android:text="單價($NTD)"
            android:textColor="#696969"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/protext5"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/protext3"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp"
            android:text="NTD$"
            android:textColor="#696969"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/protext6"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/protext4"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="10dp"
            android:text="數量(單位)"
            android:textColor="#696969"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/protext7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/protext6"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp"
            android:focusable="false"
            android:text="單位"
            android:textColor="#696969"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/protext8"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/protext6"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="10dp"
            android:text="代購費(NTD$)"
            android:textColor="#696969"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/protext9"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/protext8"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp"
            android:text="NTD$"
            android:textColor="#696969"
            android:textSize="14dp" />





    </RelativeLayout>
</LinearLayout>