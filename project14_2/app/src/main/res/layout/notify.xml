<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.project14.nccu105.project14_2.Notify"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:id="@+id/sv_7_1">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="#ffeedd"
            android:layout_height="match_parent">

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textAppearance="?android:attr/textAppearanceLarge"-->
                <!--android:text="訂單追蹤"-->
                <!--android:id="@+id/tv7_1" />-->
            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#ffd1a4"
                android:elevation="4dp"

                android:minHeight="?attr/actionBarSize"
                android:theme="@style/AppTheme.ToolBarStyle"
                app:popupTheme="@style/AppTheme.PopupOverlay">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="#ffd1a4">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="#696969"
                    android:textSize="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:gravity="center"

                    android:text="訊息通知"
                    android:id="@+id/tv7_4" />
            </RelativeLayout>
            </android.support.v7.widget.Toolbar>
            <ListView
                android:layout_width="match_parent"
                android:layout_height="122dp"
                android:id="@+id/lv7_1"
                android:background="#ffeedd"/>
            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#ffd1a4"
                android:elevation="4dp"

                android:minHeight="?attr/actionBarSize"
                android:theme="@style/AppTheme.ToolBarStyle"
                app:popupTheme="@style/AppTheme.PopupOverlay">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="#ffd1a4">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#696969"
                android:textSize="20dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:gravity="center"

                android:text="訂單更新通知"
                android:id="@+id/tv7_2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="95dp"
                    android:gravity="center"
                    android:hint="顯示最新三筆"
                    android:textSize="12dp"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/btn7_7"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="13dp"
                    android:background="@drawable/btn_selector"
                    android:backgroundTint="#ffeeaa"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="更多"
                    android:textColor="	#696969"
                    android:textSize="12dp" />
            </RelativeLayout>
            </android.support.v7.widget.Toolbar>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="303dp">


            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lv7_2"
                android:stackFromBottom="true"
                android:background="#ffeedd"/>
            </RelativeLayout>
            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#ffd1a4"
                android:elevation="4dp"

                android:minHeight="?attr/actionBarSize"
                android:theme="@style/AppTheme.ToolBarStyle"
                app:popupTheme="@style/AppTheme.PopupOverlay">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="#ffd1a4">

                <TextView
                    android:id="@+id/tv7_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:gravity="center"
                    android:text="聊天紀錄"
                    android:textColor="#696969"

                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="95dp"
                    android:gravity="center"
                    android:hint="顯示最新三筆"
                    android:textSize="12dp"
                    android:textColor="#000000" />
                <Button
                    android:id="@+id/tv7_6"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="13dp"
                    android:background="@drawable/btn_selector"
                    android:backgroundTint="#ffeeaa"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="更多"
                    android:textColor="	#696969"
                    android:textSize="12dp" />
            </RelativeLayout>
            </android.support.v7.widget.Toolbar>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lv7_3"
                android:background="#ffeedd"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:layout_gravity="bottom"
        android:background="#ffeedd"
        android:elevation="30dp"
        android:paddingTop="3dp">

        <Button
            android:backgroundTint="#ffeedd"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/forum"
            android:textSize="14dp"
            android:id="@+id/btn7_1"
            android:layout_gravity="center"
            style="?android:attr/borderlessButtonStyle"
            android:padding="0dp"
            android:drawableTop="@drawable/button_house"/>

        <!--<Button-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="@string/buyer"-->
            <!--android:id="@+id/btn7_2"-->
            <!--android:layout_gravity="center" />-->

        <Button
            android:backgroundTint="#ffeedd"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/seller"
            android:id="@+id/btn7_3"
            android:textSize="14dp"
            android:layout_gravity="center"
            style="?android:attr/borderlessButtonStyle"
            android:padding="0dp"
            android:drawableTop="@drawable/button_shoppingbag" />

        <Button
            android:backgroundTint="#ffeedd"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/map"
            android:textSize="14dp"
            android:id="@+id/btn7_4"

            android:layout_gravity="center" style="?android:attr/borderlessButtonStyle"
            android:padding="0dp"
            android:drawableTop="@drawable/button_map"/>

        <Button
            android:backgroundTint="#ffeedd"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/notify"
            android:id="@+id/btn7_5"
            android:layout_gravity="center"
            style="?android:attr/borderlessButtonStyle"
            android:textSize="14dp"
            android:padding="0dp"
            android:drawableTop="@drawable/button_notification"
            />
        <Button
            android:backgroundTint="#ffeedd"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/personal"
            android:id="@+id/btn7_6"
            android:layout_gravity="center"
            style="?android:attr/borderlessButtonStyle"
            android:padding="0dp"
            android:textSize="14dp"
            android:drawableTop="@drawable/button_avatar"/>
    </LinearLayout>
</LinearLayout>
