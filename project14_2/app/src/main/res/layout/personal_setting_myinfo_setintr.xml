    <ScrollView
        android:id="@+id/sv60"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv60_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="更新個人簡介" />

                <EditText
                    android:id="@+id/et60_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="新手用戶~~請多指教" />

                <TextView
                    android:id="@+id/tv60_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="輸入密碼確認" />

                <EditText
                    android:id="@+id/et60_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="原密碼" />

                <Button
                    android:id="@+id/btn60_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#ffd1a4"
                    android:text="確認更改" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="0.7"
        android:paddingTop="3dp"
        android:elevation="30dp"
        android:background="#ffeedd"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn60_1"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@drawable/button_house"
            android:padding="0dp"
            android:text="@string/forum" />

        <!--<Button-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_weight="1"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="@string/buyer"-->
        <!--android:id="@+id/btn11_2"-->
        <!--android:layout_gravity="center" />-->

        <Button
            android:id="@+id/btn60_3"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@drawable/button_shoppingbag"
            android:padding="0dp"
            android:text="@string/seller" />

        <Button
            android:id="@+id/btn60_4"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@drawable/button_map"
            android:padding="0dp"
            android:text="@string/map" />

        <Button
            android:id="@+id/btn60_5"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@drawable/button_notification"
            android:padding="0dp"
            android:text="@string/notify" />

        <Button
            android:id="@+id/btn60_6"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@drawable/button_avatar"
            android:padding="0dp"
            android:text="@string/personal" />
    </LinearLayout>
</LinearLayout>
