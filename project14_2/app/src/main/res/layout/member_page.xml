<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <ScrollView
        android:id="@+id/sv42"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="#ffd1a4">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffeedd"
            android:orientation="vertical">
<!--            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar42"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#ffeedd"
                android:elevation="4dp"
                android:minHeight="?attr/actionBarSize"
                android:theme="@style/AppTheme.ToolBarStyle"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:titleTextColor="@android:color/white"
                app:navigationIcon="@drawable/arrow_back_icon"
                >-->


              <!--  <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"

                    android:background="@drawable/arrowleft"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/ib42_1"/>-->


<!--


            </android.support.v7.widget.Toolbar>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="#ffd1a4 "
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:background="#ffd1a4"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn42_0"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="10dp"

                        android:layout_marginTop="10dp"
                        android:background="@drawable/arrow_back_icon"
                        android:gravity="right"
                        android:minHeight="0dp" />


                    <ImageView
                        android:id="@+id/iv42_1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"

                        android:src="@drawable/ic_user" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"

                            android:background="#ffd1a4"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv42_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:text="使用者名稱"


                                android:textAppearance="?android:attr/textAppearanceSmall" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="#ffd1a4"
                            android:orientation="horizontal">


                            <Button
                                android:id="@+id/btn42_8"
                                style="?android:attr/buttonStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"


                                android:layout_marginBottom="15dp"
                                android:background="@drawable/btn_selector"
                                android:backgroundTint="#ffeeaa"
                                android:paddingLeft="7dp"
                                android:paddingRight="7dp"
                                android:text="用戶評價"
                                android:textColor="#696969" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="4dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:gravity="right"
                        android:orientation="vertical">


                        <Button
                            android:id="@+id/btn42_7"
                            style="?android:attr/buttonStyleSmall"

                            android:layout_width="24dp"
                            android:layout_height="24dp"


                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ic_chat" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="#ffd1a4">

                <TextView
                    android:id="@+id/tv42_6"
                    android:text="新手賣家，請多指教\n歡迎逛逛商品，有問題私訊喔!"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_alignTop="@+id/tv42_4"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toEndOf="@+id/tv42_1"
                    android:background="#ffeedd"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/iv42_1"

                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv42_2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#ffeeaa"
                    android:gravity="center"
                    android:text="請求單"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp"

                    />

                <TextView
                    android:id="@+id/tv42_3"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:background="#ffeeaa"
                    android:gravity="center"
                    android:text="想要商品" />

                <TextView
                    android:id="@+id/tv42_4"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#ffeeaa"
                    android:gravity="center"
                    android:text="文章" />

                <TextView
                    android:id="@+id/tv42_5"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#ffeeaa"
                    android:gravity="center"
                    android:text="商品單"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="#ffd1a4"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                >
                <ViewFlipper
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:id="@+id/vs42_1"
                    android:background="#ffeedd"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recyclerView42_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"  >


                        </android.support.v7.widget.RecyclerView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recyclerView42_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"  >


                        </android.support.v7.widget.RecyclerView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recyclerView42_3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"  >


                        </android.support.v7.widget.RecyclerView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recyclerView42_4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"  >


                        </android.support.v7.widget.RecyclerView>

                    </LinearLayout>
                </ViewFlipper>
            </LinearLayout>


        </LinearLayout>


    </ScrollView>





</LinearLayout>

