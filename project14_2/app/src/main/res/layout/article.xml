<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll39"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffeedd"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar39"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#ffd1a4"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/AppTheme.ToolBarStyle"
        app:navigationIcon="@drawable/arrow_back_icon"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:titleTextColor="@android:color/white">

        <TextView
            android:id="@+id/et39_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"

            android:text="比價"
            android:textSize="13sp" />

    </android.support.v7.widget.Toolbar>


    <!-- <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffeedd  "

        android:orientation="horizontal"

        >


         <ImageButton
        android:layout_width="60dp"
        android:layout_height="match_parent"

        android:background="@drawable/arrowleft"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/ib39_1"/>

        <TextView
            android:id="@+id/tv39_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="xx在哪買好?"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>-->

    <ScrollView
        android:id="@+id/sv39"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1500dp"
            android:background="#ffeedd"
            android:orientation="vertical"


            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">



                    <TextView
                        android:id="@+id/et39_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_alignBaseline="@+id/tv39_4"
                        android:layout_alignStart="@+id/et39_1"
                        android:layout_alignEnd="@+id/et39_1"
                        android:layout_marginTop="10dp"
                        android:text="露露"
                        android:textSize="18dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/et39_2"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv39_3"
                    android:layout_alignStart="@+id/et39_1"
                    android:layout_alignEnd="@+id/et39_1"
                    android:layout_marginLeft="10dp"
                    android:text="2019/5/16" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv39_1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/et39_4"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:layout_marginBottom="30dp"
                    android:text="求問xx在韓國哪家比較便宜?有哪位大大知道嗎?謝謝!"
                    android:textSize="18dp" />




                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#AAAAAA" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv39_6"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginStart="10dp"
                        android:text="點擊查看完整留言▽"
                        android:textSize="18dp" />
                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#AAAAAA" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ListView
                            android:id="@+id/article_messages"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:divider="#AAAAAA"
                            android:dividerHeight="1dp"

                            android:stackFromBottom="true" />


                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/fab39"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:clickable="true"
                            android:src="@drawable/mr_media_play_dark"
                            android:tint="@android:color/white"
                            app:backgroundTint="#ffd1a4"

                            app:fabSize="mini" />

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:layout_toLeftOf="@id/fab39">

                            <EditText
                                android:id="@+id/et39_5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:ems="10"
                                android:hint="我想要說......" />
                        </android.support.design.widget.TextInputLayout>

                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
