<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background=" #ffeedd"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv500"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/ic_camera" />

    <Button
        android:id="@+id/btn500_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="選擇圖片"
        android:backgroundTint="#ffeeaa"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn500_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#ffd1a4"
            android:text="取消" />

        <Button
            android:id="@+id/btn500_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#ffeeaa"
            android:text="確定更換" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv500_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="注意事項:\n如果按下確認鍵後頭貼未更新，請重新回到該頁面即可看到更新的圖片，謝謝！"
        android:textColor="@color/quantum_googred500" />

</LinearLayout>
